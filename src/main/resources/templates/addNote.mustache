<!DOCTYPE HTML>
<html>
<head>
    <title>Add note</title>
    <meta charset="utf-8">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/jquery-1.11.3.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
    <div class="row">
        <form class="form-horizontal" action="addNote" method="post">

            <div class="row">
                <div class="form-group">
                    <div class="col-sm-1">
                        <p>Name:</p>
                    </div>
                    <div class="col-sm-11">
                        <input type="text" placeholder="Name" id="userName" name="name">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-sm-12">
                <textarea
                        class="form-control"
                        id="noteField"
                        placeholder="Add your note"
                        name="note"
                        rows="10"
                        oninput="doInput(this.form)"></textarea>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div id="notes"></div>
    </div>

</div>

<script>
    function doInput(theForm) {
        $.ajax({ // create an AJAX call...
            data: $(theForm).serialize(),
            type: $(theForm).attr('method'),
            url: $(theForm).attr('action'),
            success: function (response) {
                $('#notes').html(response);
            }
        });
    }
</script>

</body>
</html>
